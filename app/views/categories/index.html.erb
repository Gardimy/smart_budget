<h2>Categories</h2>
<div class="container">
<% if @categories.any? %>
  <% @categories.each do |category| %> 
    <div class="each">
      <div class="leftDiv">
        <div class="img">
           <img src="<%= category.icon %>" alt="category icon">
        </div>
        <div class="content">
            <h3><%= link_to category.name, category_payments_path(category) %></h3>
            <p><%= category.created_at.strftime("%Y-%m-%d %H:%M:%S")%></p>
        </div>
      </div>
      <div class="rightDiv">
         <p>Amount <%= category.payments.sum(:amount) %></p>
         <%= button_to "Delete Category", category_path(category), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end%>
<% else %>
  <p>There is no categories you have yet!</p>
<% end %>
 <div class="addbtn"><%= link_to 'Add Category', new_category_path, class: "add-button" %></div>
</div>